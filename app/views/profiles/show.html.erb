<% content_for :title, "Mon Profil" %>
<% content_for :description, "Consultez les informations de votre profil utilisateur." %>

<section class="py-16 bg-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Profil de <%= current_user.full_name %></h2>

      <% if current_user.student? %>
        <%= render partial: "student_profile", locals: { profile: @profile } %>
      <% elsif current_user.institution? %>
        <%= render partial: "institution_profile", locals: { profile: @profile } %>
      <% end %>

      <%= link_to "Modifier mon profil", edit_profile_path, class: "mt-6 inline-block bg-primary text-white px-6 py-3 rounded-xl hover:bg-indigo-700 transition" %>
    </div>
  </div>
</section>
