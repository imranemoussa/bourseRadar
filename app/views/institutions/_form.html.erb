<section class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 py-12">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-full mb-4 shadow-lg">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
      </div>
      <h1 class="text-4xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-2">
        <%= @institution.new_record? ? "Créer une institution" : "Modifier l'institution" %>
      </h1>
      <p class="text-gray-600 text-lg">
        <%= @institution.new_record? ? "Ajoutez une nouvelle institution à votre réseau" : "Mettez à jour les informations de l'institution" %>
      </p>
    </div>

    <!-- Main Form Card -->
    <div class="bg-white rounded-3xl shadow-2xl border border-gray-100 overflow-hidden">
      <!-- Card Header -->
      <div class="bg-gradient-to-r from-indigo-500 to-purple-600 px-8 py-6">
        <h2 class="text-2xl font-semibold text-white flex items-center">
          <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Informations de l'institution
        </h2>
      </div>

      <!-- Form Content -->
      <div class="p-8 lg:p-12">
        <%= form_with model: @institution, local: true, class: "space-y-8" do |f| %>
          
          <!-- Basic Information Section -->
          <div class="space-y-6">
            <div class="flex items-center mb-6">
              <div class="flex-shrink-0">
                <div class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-semibold text-gray-900">Informations générales</h3>
                <p class="text-gray-600">Les détails principaux de l'institution</p>
              </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
              <!-- Name -->
              <div class="space-y-2">
                <%= f.label :name, "Nom de l'institution", class: "block text-sm font-semibold text-gray-700" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                  </div>
                  <%= f.text_field :name, 
                      class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white",
                      placeholder: "Ex: Université de Paris" %>
                </div>
              </div>

              <!-- Country -->
              <div class="space-y-2">
                <%= f.label :country, "Pays", class: "block text-sm font-semibold text-gray-700" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <%= f.text_field :country, 
                      class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white",
                      placeholder: "Ex: France" %>
                </div>
              </div>

              <!-- City -->
              <div class="space-y-2">
                <%= f.label :city, "Ville", class: "block text-sm font-semibold text-gray-700" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <%= f.text_field :city, 
                      class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white",
                      placeholder: "Ex: Paris" %>
                </div>
              </div>

              <!-- Website -->
              <div class="space-y-2">
                <%= f.label :website, "Site web", class: "block text-sm font-semibold text-gray-700" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9-9s4-9 9-9"></path>
                    </svg>
                  </div>
                  <%= f.url_field :website, 
                      class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white",
                      placeholder: "https://www.exemple.com" %>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Information Section -->
          <div class="border-t border-gray-200 pt-8">
            <div class="flex items-center mb-6">
              <div class="flex-shrink-0">
                <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-semibold text-gray-900">Informations de contact</h3>
                <p class="text-gray-600">Moyens de communication avec l'institution</p>
              </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
              <!-- Contact Email -->
              <div class="space-y-2">
                <%= f.label :contact_email, "Email de contact", class: "block text-sm font-semibold text-gray-700" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                    </svg>
                  </div>
                  <%= f.email_field :contact_email, 
                      class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white",
                      placeholder: "contact@institution.com" %>
                </div>
              </div>

              <!-- Contact Phone -->
              <div class="space-y-2">
                <%= f.label :contact_phone, "Téléphone", class: "block text-sm font-semibold text-gray-700" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <%= f.telephone_field :contact_phone, 
                      class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white",
                      placeholder: "+33 1 23 45 67 89" %>
                </div>
              </div>
            </div>
          </div>

          <!-- Description Section -->
          <div class="border-t border-gray-200 pt-8">
            <div class="flex items-center mb-6">
              <div class="flex-shrink-0">
                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-semibold text-gray-900">Description</h3>
                <p class="text-gray-600">Présentez l'institution en quelques mots</p>
              </div>
            </div>

            <div class="space-y-2">
              <%= f.label :description, "Description détaillée", class: "block text-sm font-semibold text-gray-700" %>
              <%= f.text_area :description, 
                  rows: 6, 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white resize-none",
                  placeholder: "Décrivez l'institution, ses domaines d'expertise, sa mission..." %>
              <p class="text-xs text-gray-500">Maximum 500 caractères recommandés</p>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="border-t border-gray-200 pt-8">
            <div class="flex flex-col sm:flex-row gap-4 justify-end">
              <%= link_to "Annuler", :back, 
                  class: "inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-xl hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" %>
              
              <%= f.submit (@institution.new_record? ? "Créer l'institution" : "Enregistrer les modifications"),
                  class: "inline-flex items-center justify-center px-8 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200 transform hover:scale-105 shadow-lg" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Additional Info Card -->
    <div class="mt-8 bg-indigo-50 border border-indigo-200 rounded-2xl p-6">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-semibold text-indigo-800">Conseils pour un profil complet</h3>
          <div class="mt-2 text-sm text-indigo-700">
            <ul class="list-disc list-inside space-y-1">
              <li>Assurez-vous que toutes les informations sont à jour</li>
              <li>Une description détaillée améliore la visibilité</li>
              <li>Vérifiez que l'URL du site web est correcte</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>