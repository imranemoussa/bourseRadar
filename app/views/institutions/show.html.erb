<% content_for :title, @institution.name %>
<% content_for :description, truncate(@institution.description, length: 160) %>

<section class="relative min-h-screen bg-white overflow-hidden">
  <!-- Subtle background patterns -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-0 left-0 w-full h-full" style="background-image: radial-gradient(circle at 25% 25%, #667eea 0%, transparent 50%), radial-gradient(circle at 75% 75%, #764ba2 0%, transparent 50%);"></div>
  </div>
  
  <!-- Floating geometric shapes -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute animate-float-slow top-20 left-20 w-32 h-32 border-2 border-blue-100 rounded-full opacity-30"></div>
    <div class="absolute animate-float-medium top-40 right-32 w-24 h-24 border-2 border-purple-100 rounded-lg rotate-45 opacity-25"></div>
    <div class="absolute animate-float-fast bottom-32 left-1/4 w-16 h-16 border-2 border-pink-100 rounded-full opacity-20"></div>
    <div class="absolute animate-float-slow bottom-20 right-20 w-20 h-20 border-2 border-indigo-100 rounded-lg opacity-35"></div>
  </div>

  <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Header Section -->
    <div class="text-center mb-16">
      <!-- Institution Icon -->
      <div class="relative inline-flex items-center justify-center mb-8">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full blur-xl opacity-20 scale-110"></div>
        <div class="relative w-24 h-24 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center shadow-2xl">
          <i class="fas fa-university text-3xl text-white"></i>
        </div>
        <div class="absolute -top-2 -right-2 w-8 h-8 bg-gradient-to-r from-yellow-400 to-orange-500 rounded-full flex items-center justify-center shadow-lg">
          <i class="fas fa-star text-white text-sm"></i>
        </div>
      </div>

      <!-- Institution Name -->
      <h1 class="text-5xl md:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-gray-900 via-blue-800 to-purple-800 mb-4 tracking-tight">
        <%= @institution.name %>
      </h1>

      <!-- Location -->
      <div class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-blue-50 to-purple-50 rounded-full shadow-lg border border-gray-100 mb-8">
        <i class="fas fa-map-marker-alt text-blue-500 mr-3"></i>
        <span class="text-gray-700 font-medium text-lg">
          <%= @institution.city %>, <%= @institution.country %>
        </span>
      </div>

      <!-- Decorative line -->
      <div class="w-32 h-1 bg-gradient-to-r from-blue-500 to-purple-600 mx-auto rounded-full"></div>
    </div>

    <!-- Main Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <!-- Description Section -->
      <div class="lg:col-span-2">
        <div class="relative group">
          <!-- Glow effect -->
          <div class="absolute -inset-1 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 rounded-2xl blur opacity-10 group-hover:opacity-20 transition duration-1000"></div>
          
          <!-- Main content card -->
          <div class="relative bg-white border border-gray-200 rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-500">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center mr-4">
                <i class="fas fa-info-circle text-white text-xl"></i>
              </div>
              <h2 class="text-2xl font-bold text-gray-800">À propos de l'institution</h2>
            </div>
            
            <div class="prose prose-lg max-w-none text-gray-600 leading-relaxed">
              <%= simple_format(@institution.description) %>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="lg:col-span-1">
        <div class="relative group">
          <!-- Glow effect -->
          <div class="absolute -inset-1 bg-gradient-to-r from-green-500 via-blue-500 to-purple-500 rounded-2xl blur opacity-10 group-hover:opacity-20 transition duration-1000"></div>
          
          <!-- Contact card -->
          <div class="relative bg-white border border-gray-200 rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-500 sticky top-8">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-blue-600 rounded-xl flex items-center justify-center mr-4">
                <i class="fas fa-address-card text-white text-xl"></i>
              </div>
              <h2 class="text-2xl font-bold text-gray-800">Informations de contact</h2>
            </div>

            <div class="space-y-6">
              <!-- Website -->
              <% if @institution.website.present? %>
                <div class="flex items-start space-x-4 p-4 bg-gradient-to-r from-blue-50 to-purple-50 rounded-xl border border-blue-100 hover:border-blue-200 transition-all duration-300 group">
                  <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-globe text-white"></i>
                  </div>
                  <div class="flex-1">
                    <p class="text-sm font-semibold text-gray-700 mb-1">Site web</p>
                    <%= link_to @institution.website, @institution.website, class: "text-blue-600 hover:text-purple-600 font-medium hover:underline transition-colors duration-300 break-all", target: "_blank" %>
                  </div>
                  <i class="fas fa-external-link-alt text-blue-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></i>
                </div>
              <% end %>

              <!-- Email -->
              <% if @institution.contact_email.present? %>
                <div class="flex items-start space-x-4 p-4 bg-gradient-to-r from-green-50 to-blue-50 rounded-xl border border-green-100 hover:border-green-200 transition-all duration-300 group">
                  <div class="w-10 h-10 bg-gradient-to-r from-green-500 to-blue-600 rounded-lg flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-envelope text-white"></i>
                  </div>
                  <div class="flex-1">
                    <p class="text-sm font-semibold text-gray-700 mb-1">Email</p>
                    <%= mail_to @institution.contact_email, @institution.contact_email, class: "text-green-600 hover:text-blue-600 font-medium hover:underline transition-colors duration-300 break-all" %>
                  </div>
                  <i class="fas fa-paper-plane text-green-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></i>
                </div>
              <% end %>

              <!-- Phone -->
              <% if @institution.contact_phone.present? %>
                <div class="flex items-start space-x-4 p-4 bg-gradient-to-r from-purple-50 to-pink-50 rounded-xl border border-purple-100 hover:border-purple-200 transition-all duration-300 group">
                  <div class="w-10 h-10 bg-gradient-to-r from-purple-500 to-pink-600 rounded-lg flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-phone text-white"></i>
                  </div>
                  <div class="flex-1">
                    <p class="text-sm font-semibold text-gray-700 mb-1">Téléphone</p>
                    <p class="text-purple-600 font-medium"><%= @institution.contact_phone %></p>
                  </div>
                  <i class="fas fa-phone-alt text-purple-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></i>
                </div>
              <% end %>
            </div>
            
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom decorative element -->
    <div class="mt-20 text-center">
      <div class="inline-flex items-center space-x-4 px-8 py-4 bg-gradient-to-r from-blue-50 to-purple-50 rounded-full border border-gray-100">
        <div class="w-3 h-3 bg-blue-400 rounded-full animate-pulse"></div>
        <span class="text-gray-600 font-medium">Institution vérifiée</span>
        <i class="fas fa-check-circle text-green-500"></i>
        <div class="w-3 h-3 bg-purple-400 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float-slow {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
  }
  
  @keyframes float-medium {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-15px) rotate(90deg); }
  }
  
  @keyframes float-fast {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-10px) rotate(270deg); }
  }
  
  .animate-float-slow {
    animation: float-slow 8s ease-in-out infinite;
  }
  
  .animate-float-medium {
    animation: float-medium 6s ease-in-out infinite;
  }
  
  .animate-float-fast {
    animation: float-fast 4s ease-in-out infinite;
  }
  
  .prose p {
    margin-bottom: 1.5rem;
  }
  
  .prose p:last-child {
    margin-bottom: 0;
  }
</style>