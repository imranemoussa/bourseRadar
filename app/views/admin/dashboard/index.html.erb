<!-- Admin Dashboard -->
<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100">
  <div class="p-6 max-w-7xl mx-auto">
    
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Dashboard Admin</h1>
          <p class="text-gray-600">Vue d'ensemble de la plateforme de bourses</p>
        </div>
        <div class="flex items-center space-x-4">
          <div class="bg-white rounded-full p-3 shadow-lg">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      
      <!-- Total Users Card -->
      <div class="bg-white rounded-2xl shadow-xl p-6 transform hover:scale-105 transition-all duration-300 border border-gray-100">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500 mb-1">Total Utilisateurs</p>
            <p class="text-3xl font-bold text-gray-900"><%= @stats[:total_users] %></p>
          </div>
          <div class="bg-gradient-to-r from-blue-500 to-blue-600 rounded-full p-3">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
          </div>
        </div>
        <div class="mt-4 flex items-center text-sm text-green-600">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.293 9.707a1 1 0 010-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L4.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          +12% ce mois
        </div>
      </div>

      <!-- Students Card -->
      <div class="bg-white rounded-2xl shadow-xl p-6 transform hover:scale-105 transition-all duration-300 border border-gray-100">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500 mb-1">Étudiants</p>
            <p class="text-3xl font-bold text-gray-900"><%= @stats[:studients_count] %></p>
          </div>
          <div class="bg-gradient-to-r from-green-500 to-green-600 rounded-full p-3">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
            </svg>
          </div>
        </div>
        <div class="mt-4 flex items-center text-sm text-green-600">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.293 9.707a1 1 0 010-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L4.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          +8% ce mois
        </div>
      </div>

      <!-- Institutions Card -->
      <div class="bg-white rounded-2xl shadow-xl p-6 transform hover:scale-105 transition-all duration-300 border border-gray-100">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500 mb-1">Institutions</p>
            <p class="text-3xl font-bold text-gray-900"><%= @stats[:institutions_count] %></p>
          </div>
          <div class="bg-gradient-to-r from-purple-500 to-purple-600 rounded-full p-3">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
        </div>
        <div class="mt-4 flex items-center text-sm text-green-600">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.293 9.707a1 1 0 010-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L4.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          +5% ce mois
        </div>
      </div>

      <!-- Total Scholarships Card -->
      <div class="bg-white rounded-2xl shadow-xl p-6 transform hover:scale-105 transition-all duration-300 border border-gray-100">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500 mb-1">Total Bourses</p>
            <p class="text-3xl font-bold text-gray-900"><%= @stats[:total_scholarships] %></p>
          </div>
          <div class="bg-gradient-to-r from-orange-500 to-orange-600 rounded-full p-3">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="mt-4 flex items-center text-sm text-green-600">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.293 9.707a1 1 0 010-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L4.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          +15% ce mois
        </div>
      </div>

    </div>

    <!-- Scholarship Status Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      
      <!-- Active Scholarships -->
      <div class="bg-gradient-to-r from-emerald-500 to-green-600 rounded-2xl shadow-xl p-6 text-white">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold">Bourses Actives</h3>
          <div class="bg-white bg-opacity-20 rounded-full p-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
        <p class="text-3xl font-bold mb-2"><%= @stats[:active_scholarships] %></p>
        <p class="text-emerald-100 text-sm">Bourses publiées et disponibles</p>
      </div>

      <!-- Pending Scholarships -->
      <div class="bg-gradient-to-r from-amber-500 to-orange-600 rounded-2xl shadow-xl p-6 text-white">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold">En Attente</h3>
          <div class="bg-white bg-opacity-20 rounded-full p-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
        <p class="text-3xl font-bold mb-2"><%= @stats[:pending_scholarships] %></p>
        <p class="text-amber-100 text-sm">Bourses en cours de validation</p>
      </div>

      <!-- Total Institutions -->
      <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl shadow-xl p-6 text-white">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold">Institutions Totales</h3>
          <div class="bg-white bg-opacity-20 rounded-full p-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4zM18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z"></path>
            </svg>
          </div>
        </div>
        <p class="text-3xl font-bold mb-2"><%= @stats[:total_institutions] %></p>
        <p class="text-indigo-100 text-sm">Institutions partenaires</p>
      </div>

    </div>

    <!-- Recent Activity Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      
      <!-- Recent Users -->
      <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-bold text-gray-900">Utilisateurs Récents</h3>
          <div class="bg-blue-50 rounded-full p-2">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
            </svg>
          </div>
        </div>
        
        <div class="space-y-4">
          <% @recent_users.each do |user| %>
            <div class="flex items-center p-3 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors duration-200">
              <div class="bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full p-2 mr-4">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h4 class="font-semibold text-gray-900"><%= user.full_name || "Utilisateur #{user.id}" %></h4>
                <p class="text-sm text-gray-500">
                  <%= user.email %> • 
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-<%= user.role == 'student' ? 'green' : 'purple' %>-100 text-<%= user.role == 'student' ? 'green' : 'purple' %>-800">
                    <%= user.role.capitalize %>
                  </span>
                </p>
              </div>
              <div class="text-right">
                <p class="text-xs text-gray-500">
                  <%= time_ago_in_words(user.created_at) %> ago
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Recent Scholarships -->
      <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-bold text-gray-900">Bourses Récentes</h3>
          <div class="bg-orange-50 rounded-full p-2">
            <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        
        <div class="space-y-4">
          <% @recent_scholarships.each do |scholarship| %>
            <div class="flex items-center p-3 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors duration-200">
              <div class="bg-gradient-to-r from-orange-500 to-red-600 rounded-full p-2 mr-4">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h4 class="font-semibold text-gray-900"><%= scholarship.title %></h4>
                <p class="text-sm text-gray-500">
                  <%= scholarship.institution.name if scholarship.institution %> • 
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-<%= scholarship.active? ? 'green' : 'yellow' %>-100 text-<%= scholarship.active? ? 'green' : 'yellow' %>-800">
                    <%= scholarship.active? ? 'Active' : 'En attente' %>
                  </span>
                </p>
              </div>
              <div class="text-right">
                <p class="text-xs text-gray-500">
                  <%= time_ago_in_words(scholarship.created_at) %> ago
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>

  </div>
</div>