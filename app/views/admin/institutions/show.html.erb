<div class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
    <div class="container mx-auto px-4 py-8">
        <!-- Navigation -->
        <div class="mb-8">
            <%= link_to admin_institutions_path, class: "inline-flex items-center text-purple-300 hover:text-purple-400 transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Retour à la liste
            <% end %>
        </div>

        <!-- Carte principale -->
        <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-3xl overflow-hidden shadow-2xl">
            <!-- Header avec logo -->
            <div class="bg-gradient-to-r from-purple-600 to-pink-600 p-8 text-center">
                <div class="mb-4">
                    <% if @institution.logo_url.present? %>
                    <img src="<%= @institution.logo_url %>" alt="<%= @institution.name %>" class="w-24 h-24 rounded-3xl object-cover mx-auto ring-4 ring-white/50">
                    <% else %>
                    <div class="w-24 h-24 bg-white/20 rounded-3xl flex items-center justify-center mx-auto ring-4 ring-white/50">
                        <span class="text-white font-bold text-3xl"><%= @institution.name.first.upcase %></span>
                    </div>
                    <% end %>
                </div>
                <h1 class="text-4xl md:text-5xl font-bold text-white mb-2"><%= @institution.name %></h1>
                <p class="text-purple-100 text-lg">Détails de l'institution</p>
            </div>

            <!-- Contenu -->
            <div class="p-8">
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <!-- Colonne principale -->
                    <div class="lg:col-span-2 space-y-6">
                        <!-- Description -->
                        <div class="bg-white/5 rounded-2xl p-6 border border-white/10">
                            <h3 class="text-xl font-bold text-white mb-4 flex items-center">
                                <svg class="w-6 h-6 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                                Description
                            </h3>
                            <p class="text-slate-300 leading-relaxed">
                                <%= @institution.description.present? ? @institution.description : "Aucune description disponible" %>
                            </p>
                        </div>

                        <!-- Informations de contact -->
                        <div class="bg-white/5 rounded-2xl p-6 border border-white/10">
                            <h3 class="text-xl font-bold text-white mb-4 flex items-center">
                                <svg class="w-6 h-6 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                                Contact
                            </h3>
                            <div class="space-y-3">
                                <% if @institution.contact_email.present? %>
                                <div class="flex items-center text-slate-300">
                                    <svg class="w-5 h-5 mr-3 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                                    </svg>
                                    <a href="mailto:<%= @institution.contact_email %>" class="hover:text-purple-300 transition-colors">
                                        <%= @institution.contact_email %>
                                    </a>
                                </div>
                                <% end %>

                                <% if @institution.contact_phone.present? %>
                                <div class="flex items-center text-slate-300">
                                    <svg class="w-5 h-5 mr-3 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                    </svg>
                                    <a href="tel:<%= @institution.contact_phone %>" class="hover:text-purple-300 transition-colors">
                                        <%= @institution.contact_phone %>
                                    </a>
                                </div>
                                <% end %>

                                <% if @institution.website.present? %>
                                <div class="flex items-center text-slate-300">
                                    <svg class="w-5 h-5 mr-3 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9-9s4-9 9-9" />
                                    </svg>
                                    <a href="<%= @institution.website %>" target="_blank" class="hover:text-purple-300 transition-colors">
                                        <%= @institution.website %>
                                    </a>
                                </div>
                                <% end %>
                            </div>
                        </div>

                        <!-- Administrateur -->
                        <% if @institution.user.present? %>
                        <div class="bg-white/5 rounded-2xl p-6 border border-white/10">
                            <h3 class="text-xl font-bold text-white mb-4 flex items-center">
                                <svg class="w-6 h-6 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                                Administrateur
                            </h3>
                            <div class="flex items-center space-x-4">
                                <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-pink-400 rounded-full flex items-center justify-center">
                                    <span class="text-white font-bold"><%= @institution.user.first_name.first.upcase %><%= @institution.user.last_name.first.upcase %></span>
                                </div>
                                <div>
                                    <p class="text-white font-semibold"><%= @institution.user.first_name %> <%= @institution.user.last_name %></p>
                                    <p class="text-slate-300"><%= @institution.user.email %></p>
                                    <% if @institution.user.phone.present? %>
                                    <p class="text-slate-400 text-sm"><%= @institution.user.phone %></p>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                        <% end %>
                    </div>

                    <!-- Sidebar -->
                    <div class="space-y-6">
                        <!-- Localisation -->
                        <div class="bg-white/5 rounded-2xl p-6 border border-white/10">
                            <h3 class="text-xl font-bold text-white mb-4 flex items-center">
                                <svg class="w-6 h-6 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                Localisation
                            </h3>
                            <div class="space-y-2">
                                <p class="text-slate-300"><%= @institution.city %></p>
                                <p class="text-slate-400"><%= @institution.country %></p>
                            </div>
                        </div>

                        <!-- Métadonnées -->
                        <div class="bg-white/5 rounded-2xl p-6 border border-white/10">
                            <h3 class="text-xl font-bold text-white mb-4 flex items-center">
                                <svg class="w-6 h-6 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                Informations
                            </h3>
                            <div class="space-y-3">
                                <div class="flex justify-between">
                                    <span class="text-slate-400">Créée le:</span>
                                    <span class="text-slate-300"><%= @institution.created_at.strftime("%d/%m/%Y") %></span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-slate-400">Modifiée le:</span>
                                    <span class="text-slate-300"><%= @institution.updated_at.strftime("%d/%m/%Y") %></span>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="space-y-3">
                            <%= link_to edit_admin_institution_path(@institution), class: "w-full flex items-center justify-center px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-semibold rounded-xl hover:shadow-lg transform hover:scale-105 transition-all duration-300" do %>
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                            Modifier
                            <% end %>

                            <%= button_to admin_institution_path(institution),
              method: :delete,
              data: { turbo: false, confirm: "Êtes-vous sûr de vouloir supprimer cette institution ?" },
              form_class: "inline",
              class: "flex items-center justify-center w-8 h-8 bg-red-500/20 hover:bg-red-500/30 text-red-300 rounded-lg transition-all duration-200 hover:scale-105",
              title: "Supprimer" do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                            <% end %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>