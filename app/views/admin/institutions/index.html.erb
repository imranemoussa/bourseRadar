<!-- app/views/admin/institutions/index.html.erb -->
<div class="min-h-screen bg-gradient-to-br from-slate-50 via-purple-50 to-indigo-100">
  <!-- Header Section -->
  <div class="bg-white/80 backdrop-blur-sm border-b border-slate-200 sticky top-0 z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div class="flex items-center space-x-3">
          <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl flex items-center justify-center">
            <i class="fas fa-university text-white text-2xl"></i>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-slate-900">Gestion des Institutions</h1>
            <p class="text-slate-600 mt-1">Administrez et gérez toutes les institutions</p>
          </div>
        </div>
        <%= link_to new_admin_institution_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-semibold rounded-xl hover:from-purple-600 hover:to-pink-600 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nouvelle Institution
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if @institutions.any? %>
  <div class="overflow-x-auto rounded-2xl shadow-lg bg-white">
    <table class="min-w-full divide-y divide-slate-200">
      <thead class="bg-gradient-to-r from-purple-500 to-pink-500">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wider">Nom</th>
          <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wider">Ville</th>
          <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wider">Pays</th>
          <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wider">Contact</th>
          <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wider">Responsable</th>
          <th class="px-6 py-3 text-center text-xs font-bold text-white uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-slate-100">
        <% @institutions.each do |institution| %>
          <tr class="hover:bg-purple-50 transition">
            <td class="px-6 py-4 font-semibold text-slate-900"><%= institution.name %></td>
            <td class="px-6 py-4 text-slate-700"><%= institution.city %></td>
            <td class="px-6 py-4 text-slate-700"><%= institution.country %></td>
            <td class="px-6 py-4 text-slate-700">
              <% if institution.contact_email.present? %>
                <i class="fas fa-envelope mr-1 text-purple-400"></i>
                <%= truncate(institution.contact_email, length: 25) %>
              <% else %>
                <span class="text-slate-400 italic"></span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-slate-700">
              <% if institution.user.present? %>
                <i class="fas fa-user mr-1 text-pink-400"></i>
                <%= institution.user.first_name %> <%= institution.user.last_name %>
              <% else %>
                <span class="text-slate-400 italic"></span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-center">
              <div class="flex items-center justify-center space-x-2">
                <!-- Voir -->
                <%= link_to admin_institution_path(institution), class: "btn btn-sm btn-outline-primary" do %>
                    <i class="bi bi-eye"></i> <!-- Bootstrap Icons -->
                <% end %>
                 <!-- Modifier -->
                    <%= link_to edit_admin_institution_path(institution), class: "btn btn-sm btn-outline-warning" do %>
                        <i class="bi bi-pencil"></i>
                    <% end %>

                  
                <%= button_to admin_institution_path(institution),
                      method: :delete,
                      data: { turbo: false, confirm: "Êtes-vous sûr de vouloir supprimer cette institution ?" },
                      form_class: "inline",
                      class: "bg-red-50 hover:bg-red-100 text-red-600 font-medium py-1 px-3 rounded-lg transition-colors text-xs",
                      title: "Supprimer" do %>
                    <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="text-center py-16">
    <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full mb-6">
      <i class="fas fa-university text-white text-4xl"></i>
    </div>
    <h3 class="text-2xl font-bold text-slate-900 mb-2">Aucune institution trouvée</h3>
    <p class="text-slate-600 mb-6">Commencez par créer votre première institution</p>
    <%= link_to "Créer une institution", new_admin_institution_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-semibold rounded-xl hover:from-purple-600 hover:to-pink-600 transform hover:scale-105 transition-all duration-300 shadow-lg" do %>
      <i class="fas fa-plus mr-2"></i>
      Créer une institution
    <% end %>
  </div>
<% end %>
      </div>
   
  </div>
</div>