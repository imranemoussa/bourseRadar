<!-- app/views/admin/institutions/_form.html.erb -->
<div class="max-w-4xl mx-auto bg-white rounded-3xl shadow-2xl border border-slate-200 overflow-hidden">
  <!-- Header du formulaire -->
  <div class="bg-gradient-to-r from-purple-600 to-pink-600 p-6 text-center">
    <h2 class="text-2xl font-bold text-white flex items-center justify-center">
      <svg class="w-8 h-8 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
      </svg>
      <%= @institution.persisted? ? "Modifier l'institution" : "Nouvelle institution" %>
    </h2>
  </div>

  <%= form_with(model: [:admin, @institution], local: true, class: "p-8") do |form| %>
    <% if @institution.errors.any? %>
      <div class="mb-6 bg-red-100 border border-red-200 rounded-2xl p-4">
        <div class="flex items-center mb-2">
          <svg class="w-5 h-5 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
          <h3 class="text-red-700 font-semibold">Erreurs détectées</h3>
        </div>
        <ul class="text-red-600 text-sm space-y-1">
          <% @institution.errors.full_messages.each do |message| %>
            <li class="flex items-start">
              <span class="text-red-400 mr-2">•</span>
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Colonne gauche - Informations institution -->
      <div class="space-y-6">
        <div class="bg-slate-50 rounded-2xl p-6 border border-slate-100">
          <h3 class="text-lg font-bold text-slate-900 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            Informations générales
          </h3>
          <div class="space-y-4">
            <!-- Nom -->
            <div>
              <%= form.label :name, "Nom de l'institution *", class: "block text-sm font-medium text-slate-700 mb-2" %>
              <%= form.text_field :name, class: "w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300", placeholder: "Nom de l'institution" %>
            </div>
            <!-- Description -->
            <div>
              <%= form.label :description, "Description", class: "block text-sm font-medium text-slate-700 mb-2" %>
              <%= form.text_area :description, rows: 4, class: "w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300 resize-none", placeholder: "Description de l'institution..." %>
            </div>
            <!-- Ville et Pays -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <%= form.label :city, "Ville *", class: "block text-sm font-medium text-slate-700 mb-2" %>
                <%= form.text_field :city, class: "w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300", placeholder: "Ville" %>
              </div>
              <div>
                <%= form.label :country, "Pays *", class: "block text-sm font-medium text-slate-700 mb-2" %>
                <%= form.text_field :country, class: "w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300", placeholder: "Pays" %>
              </div>
            </div>
            <!-- Site Web -->
            <div>
              <%= form.label :website, "Site Web", class: "block text-sm font-medium text-slate-700 mb-2" %>
              <%= form.url_field :website, class: "w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300", placeholder: "https://exemple.com" %>
            </div>
            <!-- URL du logo -->
            <div>
              <%= form.label :logo_url, "URL du logo", class: "block text-sm font-medium text-slate-700 mb-2" %>
              <%= form.url_field :logo_url, class: "w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300", placeholder: "https://exemple.com/logo.png" %>
            </div>
          </div>
        </div>
        <!-- Section contact -->
        <div class="bg-slate-50 rounded-2xl p-6 border border-slate-100">
          <h3 class="text-lg font-bold text-slate-900 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Informations de contact
          </h3>
          <div class="space-y-4">
            <div>
              <%= form.label :contact_email, "Email de contact", class: "block text-sm font-medium text-slate-700 mb-2" %>
              <%= form.email_field :contact_email, class: "w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300", placeholder: "contact@institution.com" %>
            </div>
            <div>
              <%= form.label :contact_phone, "Téléphone de contact", class: "block text-sm font-medium text-slate-700 mb-2" %>
              <%= form.telephone_field  :contact_phone, class: "w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300", placeholder: "+33 1 23 45 67 89" %>
            </div>
          </div>
        </div>
      </div>
      <!-- Colonne droite - Informations utilisateur -->
      <div class="space-y-6">
        <div class="bg-slate-50 rounded-2xl p-6 border border-slate-100">
          <h3 class="text-lg font-bold text-slate-900 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Administrateur de l'institution
          </h3>
          <%= form.fields_for :user do |user_form| %>
            <div class="space-y-4">
              <div>
                <%= user_form.label :email, "Email *", class: "block text-sm font-medium text-slate-700 mb-2" %>
                <%= user_form.email_field :email, class: "w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300", placeholder: "admin@institution.com" %>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <%= user_form.label :first_name, "Prénom *", class: "block text-sm font-medium text-slate-700 mb-2" %>
                  <%= user_form.text_field :first_name, class: "w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300", placeholder: "Prénom" %>
                </div>
                <div>
                  <%= user_form.label :last_name, "Nom *", class: "block text-sm font-medium text-slate-700 mb-2" %>
                  <%= user_form.text_field :last_name, class: "w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300", placeholder: "Nom" %>
                </div>
              </div>
              <div>
                <%= user_form.label :phone, "Téléphone", class: "block text-sm font-medium text-slate-700 mb-2" %>
                <%= user_form.telephone_field  :phone, class: "w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300", placeholder: "+33 1 23 45 67 89" %>
              </div>
              <div>
                <%= user_form.label :password, "Mot de passe", class: "block text-sm font-medium text-slate-700 mb-2" %>
                <% if @minimum_password_length %>
                  <p class="text-xs text-slate-500 mb-2">
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      Minimum <%= @minimum_password_length %> caractères
                    </span>
                  </p>
                <% end %>
                <%= user_form.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300", placeholder: "••••••••", required: true %>
              </div>
              <div>
                <%= user_form.label :password_confirmation, "Confirmer le mot de passe", class: "block text-sm font-medium text-slate-700 mb-2" %>
                <%= user_form.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300", placeholder: "••••••••", required: true %>
              </div>
            </div>
          <% end %>
        </div>
        <!-- Note d'information -->
        <div class="bg-blue-50 border border-blue-100 rounded-2xl p-4">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-blue-400 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h4 class="text-blue-700 font-semibold mb-1">Information</h4>
              <p class="text-blue-600 text-sm">Les champs marqués d'un astérisque (*) sont obligatoires. L'administrateur sera automatiquement créé s'il n'existe pas déjà.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Boutons d'action -->
    <div class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0 sm:space-x-4 mt-8 pt-6 border-t border-slate-100">
      <div class="flex space-x-4">
        <%= link_to admin_institutions_path, class: "inline-flex items-center px-6 py-3 bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium rounded-xl transition-all duration-300 hover:scale-105" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Annuler
        <% end %>
      </div>
      <div class="flex space-x-4">
        <%= form.submit class: "inline-flex items-center px-8 py-3 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-semibold rounded-xl hover:shadow-lg transform hover:scale-105 transition-all duration-300 cursor-pointer" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <%= @institution.persisted? ? "Mettre à jour" : "Créer l'institution" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>