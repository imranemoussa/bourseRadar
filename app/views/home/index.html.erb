<% content_for :title, "BourseRadar - Trouvez votre bourse d'études idéale" %>
<% content_for :description, "Découvrez des milliers d'opportunités de bourses d'études dans le monde entier. Votre avenir académique commence ici." %>

<!-- Hero Section -->
<section class="pb-16 bg-gradient-to-br from-primary via-indigo-600 to-secondary">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8">
        <div class="text-center">
            <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
                Trouvez votre <span class="text-yellow-300">bourse d'études</span> idéale
            </h1>
            <p class="text-xl text-indigo-100 mb-8 max-w-3xl mx-auto">
                Découvrez des milliers d'opportunités de bourses d'études dans le monde entier. 
                Votre avenir académique commence ici.
            </p>

            <!-- Search Bar -->
            <div class="max-w-4xl mx-auto mb-8">
                <%= form_with url: root_path, method: :get, local: true, class: "bg-white rounded-2xl shadow-2xl p-2" do |form| %>
                    <div class="flex flex-col lg:flex-row gap-2">
                        <div class="flex-1 relative">
                            <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                            <%= form.text_field :search, 
                                placeholder: "Rechercher une bourse, un domaine d'étude...",
                                value: params[:search],
                                class: "w-full pl-12 pr-4 py-4 rounded-xl border-0 focus:ring-2 focus:ring-primary outline-none text-gray-700" %>
                        </div>
                        <div class="flex flex-col sm:flex-row gap-2 lg:w-auto">
                            <%= form.select :country, 
                                options_for_select([["Tous les pays", ""]] + @countries.map { |c| [c, c] }, params[:country]),
                                {}, 
                                { class: "px-4 py-4 rounded-xl border-0 focus:ring-2 focus:ring-primary outline-none text-gray-700" } %>
                            <%= form.select :level, 
                                options_for_select([["Tous les niveaux", ""]] + @levels.map { |l| [l, l] }, params[:level]),
                                {}, 
                                { class: "px-4 py-4 rounded-xl border-0 focus:ring-2 focus:ring-primary outline-none text-gray-700" } %>
                            <%= form.submit "Rechercher", class: "bg-primary text-black px-8 py-4 rounded-xl hover:bg-indigo-700 transition-colors font-medium cursor-pointer" do %>
                                <i class="fas fa-search mr-2"></i>
                                Rechercher
                            <% end %>
                        </div>
                    </div>
                <% end %>
            </div>

            <!-- Stats -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
                <div class="text-center">
                    <div class="text-3xl font-bold text-yellow-300"><%= number_with_delimiter(@total_scholarships) %></div>
                    <div class="text-indigo-100">Bourses disponibles</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-yellow-300"><%= number_with_delimiter(@total_institutions) %></div>
                    <div class="text-indigo-100">Institutions partenaires</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-yellow-300"><%= @countries_count %></div>
                    <div class="text-indigo-100">Pays couverts</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Recent Scholarships -->
<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
                <%= params[:search].present? ? "Résultats de recherche" : "Bourses récentes" %>
            </h2>
            <p class="text-gray-600 max-w-2xl mx-auto">
                Découvrez les dernières opportunités de bourses d'études ajoutées par nos institutions partenaires
            </p>
            
            <% if params[:search].present? %>
                <div class="mt-4 inline-flex items-center space-x-2 text-sm text-gray-600">
                    <span>Recherche pour :</span>
                    <span class="px-3 py-1 bg-primary/10 text-primary rounded-full font-medium">"<%= params[:search] %>"</span>
                    <% if params[:country].present? %>
                        <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full"><%= params[:country] %></span>
                    <% end %>
                    <% if params[:level].present? %>
                        <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full"><%= params[:level] %></span>
                    <% end %>
                    <%= link_to root_path, class: "text-red-600 hover:text-red-800 ml-2" do %>
                        <i class="fas fa-times"></i> Effacer
                    <% end %>
                </div>
            <% end %>
        </div>

        <% if @scholarships.present? %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% @scholarships.each do |scholarship| %>
                    <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden group hover:-translate-y-1">
                        <div class="p-6">
                            <!-- Institution Badge -->
                            <div class="flex items-center mb-4">
                                <div class="w-12 h-12 bg-gradient-to-r from-primary to-secondary rounded-lg flex items-center justify-center flex-shrink-0">
                                    <i class="fas fa-university text-white"></i>
                                </div>
                                <div class="ml-3 min-w-0">
                                    <h4 class="font-semibold text-gray-900 truncate"><%= scholarship.institution.name %></h4>
                                    <p class="text-sm text-gray-500 flex items-center">
                                        <i class="fas fa-map-marker-alt mr-1"></i>
                                        <%= scholarship.country %>
                                    </p>
                                </div>
                            </div>

                            <!-- Scholarship Title -->
                            <h3 class="text-lg font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors line-clamp-2">
                                <%= scholarship.title %>
                            </h3>

                            <!-- Description -->
                            <p class="text-gray-600 mb-4 text-sm leading-relaxed line-clamp-3">
                                <%= truncate(scholarship.description, length: 120) %>
                            </p>

                            <!-- Tags -->
                            <div class="flex flex-wrap gap-2 mb-4">
                                <% if scholarship.level.present? %>
                                    <span class="px-3 py-1 bg-blue-100 text-blue-800 text-xs rounded-full font-medium">
                                        <%= scholarship.level %>
                                    </span>
                                <% end %>
                                <% if scholarship.field_of_study.present? %>
                                    <span class="px-3 py-1 bg-green-100 text-green-800 text-xs rounded-full font-medium">
                                        <%= truncate(scholarship.field_of_study, length: 20) %>
                                    </span>
                                <% end %>
                                <% if scholarship.pourcentage.present? %>
                                    <span class="px-3 py-1 bg-yellow-100 text-yellow-800 text-xs rounded-full font-medium">
                                        <%= scholarship.pourcentage.to_i %>% financé
                                    </span>
                                <% end %>
                            </div>

                            <!-- Footer -->
                            <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                                <div class="flex items-center text-sm text-gray-500">
                                    <i class="fas fa-calendar-alt mr-2"></i>
                                    <span>
                                        <% if scholarship.days_left %>
                                            <% if scholarship.days_left > 0 %>
                                                <span class="<%= scholarship.days_left <= 7 ? 'text-red-600 font-semibold' : scholarship.days_left <= 30 ? 'text-orange-600 font-medium' : 'text-green-600' %>">
                                                    <%= scholarship.days_left %> jours restants
                                                </span>
                                            <% else %>
                                                <span class="text-red-600 font-semibold">Expiré</span>
                                            <% end %>
                                        <% else %>
                                            Date non spécifiée
                                        <% end %>
                                    </span>
                                </div>
                                <%= link_to scholarship_path(scholarship), class: "text-primary hover:text-indigo-700 font-medium text-sm flex items-center group-hover:translate-x-1 transition-transform" do %>
                                    Voir détails
                                    <i class="fas fa-arrow-right ml-1 text-xs"></i>
                                <% end %>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>

            <!-- Pagination (si vous utilisez Kaminari) -->
            
        <% else %>
            <!-- Empty State -->
            <div class="text-center py-12">
                <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-search text-gray-400 text-3xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    <%= params[:search].present? ? "Aucune bourse trouvée" : "Aucune bourse disponible" %>
                </h3>
                <p class="text-gray-600 mb-6 max-w-md mx-auto">
                    <%= params[:search].present? ? 
                        "Essayez d'ajuster vos critères de recherche ou explorez d'autres options." : 
                        "Les institutions n'ont pas encore publié de bourses. Revenez bientôt !" %>
                </p>
                <% if params[:search].present? %>
                    <%= link_to root_path, class: "inline-flex items-center px-6 py-3 bg-primary text-white rounded-lg hover:bg-indigo-700 transition-colors font-medium" do %>
                        <i class="fas fa-home mr-2"></i>
                        Voir toutes les bourses
                    <% end %>
                <% end %>
            </div>
        <% end %>
    </div>
</section>