<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-8">
      <h2 class="text-4xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-2">
        Éditer <%= resource_name.to_s.humanize %>
      </h2>
      <p class="text-gray-600">Mettez à jour vos informations personnelles</p>
    </div>

    <!-- Main Form Card -->
    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
      <div class="bg-gradient-to-r from-indigo-500 to-purple-600 px-8 py-6">
        <h3 class="text-2xl font-semibold text-white flex items-center">
          <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          Informations du profil
        </h3>
      </div>

      <div class="p-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- Personal Information Section -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- First Name -->
            <div class="space-y-2">
              <%= f.label :first_name, class: "block text-sm font-semibold text-gray-700" %>
              <%= f.text_field :first_name, 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white",
                  placeholder: "Votre prénom" %>
            </div>

            <!-- Last Name -->
            <div class="space-y-2">
              <%= f.label :last_name, class: "block text-sm font-semibold text-gray-700" %>
              <%= f.text_field :last_name, 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white",
                  placeholder: "Votre nom" %>
            </div>
          </div>

          <!-- Email -->
          <div class="space-y-2">
            <%= f.label :email, class: "block text-sm font-semibold text-gray-700" %>
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white",
                placeholder: "votre@email.com" %>
          </div>

          <!-- Phone -->
          <div class="space-y-2">
            <%= f.label :phone, "Téléphone", class: "block text-sm font-semibold text-gray-700" %>
            <%= f.tel_field :phone, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white",
                placeholder: "+33 1 23 45 67 89" %>
          </div>

          <!-- Role -->
          <div class="space-y-2">
            <%= f.label :role, "Rôle", class: "block text-sm font-semibold text-gray-700" %>
            <%= f.select :role, 
                options_for_select([
                  ['Utilisateur', 0],
                  ['Modérateur', 1],
                  ['Administrateur', 2]
                ], resource.role),
                {},
                { class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white" } %>
          </div>

          <!-- Email Confirmation Notice -->
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="bg-amber-50 border border-amber-200 rounded-xl p-4">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-amber-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
                <p class="text-amber-800 text-sm">
                  En attente de confirmation pour : <strong><%= resource.unconfirmed_email %></strong>
                </p>
              </div>
            </div>
          <% end %>

          <!-- Password Section -->
          <div class="border-t border-gray-200 pt-6 mt-8">
            <h4 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
              Modifier le mot de passe
            </h4>

            <!-- New Password -->
            <div class="space-y-2 mb-4">
              <%= f.label :password, "Nouveau mot de passe", class: "block text-sm font-semibold text-gray-700" %>
              <p class="text-xs text-gray-500 mb-2">Laissez vide si vous ne souhaitez pas le modifier</p>
              <%= f.password_field :password, 
                  autocomplete: "new-password",
                  class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white" %>
              <% if @minimum_password_length %>
                <p class="text-xs text-gray-500 mt-1">
                  <span class="font-medium"><%= @minimum_password_length %> caractères minimum</span>
                </p>
              <% end %>
            </div>

            <!-- Confirm Password -->
            <div class="space-y-2 mb-4">
              <%= f.label :password_confirmation, "Confirmer le mot de passe", class: "block text-sm font-semibold text-gray-700" %>
              <%= f.password_field :password_confirmation, 
                  autocomplete: "new-password",
                  class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white" %>
            </div>

            <!-- Current Password -->
            <div class="space-y-2">
              <%= f.label :current_password, "Mot de passe actuel", class: "block text-sm font-semibold text-gray-700" %>
              <p class="text-xs text-gray-500 mb-2">Nous avons besoin de votre mot de passe actuel pour confirmer les modifications</p>
              <%= f.password_field :current_password, 
                  autocomplete: "current-password",
                  class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 bg-gray-50 hover:bg-white" %>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="pt-6">
            <%= f.submit "Mettre à jour", 
                class: "w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold py-4 px-8 rounded-xl hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200 transform hover:scale-105 shadow-lg" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Danger Zone -->
    <div class="mt-8 bg-red-50 border border-red-200 rounded-2xl overflow-hidden">
      <div class="bg-red-500 px-6 py-4">
        <h3 class="text-xl font-semibold text-white flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          Zone de danger
        </h3>
      </div>
      <div class="p-6">
        <p class="text-red-800 mb-4">
          Pas satisfait ? Vous pouvez supprimer définitivement votre compte. Cette action est irréversible.
        </p>
        <%= button_to "Supprimer mon compte", 
            registration_path(resource_name), 
            data: { confirm: "Êtes-vous sûr ? Cette action est irréversible.", turbo_confirm: "Êtes-vous vraiment sûr ?" }, 
            method: :delete,
            class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      </div>
    </div>

    <!-- Back Link -->
    <div class="mt-6 text-center">
      <%= link_to "← Retour", :back, 
          class: "inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium transition-colors duration-200" %>
    </div>
  </div>
</div>